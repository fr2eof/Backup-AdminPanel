# Django Core Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Backup Settings
DJANGO_BASE_BACKUP_DIR_LOCATION=backup

# Email Settings (Yandex example)
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DJANGO_EMAIL_HOST=smtp.yandex.ru
DJANGO_EMAIL_PORT=465
DJANGO_EMAIL_USE_TLS=False
DJANGO_EMAIL_USE_SSL=True
DJANGO_EMAIL_HOST_USER=your-email@yandex.ru
DJANGO_EMAIL_HOST_PASSWORD=your-email-password
DJANGO_DEFAULT_FROM_EMAIL=your-email@yandex.ru
DJANGO_SERVER_EMAIL=your-email@yandex.ru

# CORS Settings
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database Settings (PostgreSQL example)
DJANGO_DATABASE_ENGINE=django.db.backends.postgresql
DJANGO_DATABASE_NAME=mydatabase
DJANGO_DATABASE_USER=myuser
DJANGO_DATABASE_PASSWORD=mypassword
DJANGO_DATABASE_HOST=localhost
DJANGO_DATABASE_PORT=5432

# JWT Settings (optional)
DJANGO_JWT_SECRET_KEY=optional-jwt-secret-key
DJANGO_JWT_ACCESS_TOKEN_LIFETIME=300
DJANGO_JWT_REFRESH_TOKEN_LIFETIME=86400